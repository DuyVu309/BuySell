<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Loading Settings Progress Bar -->
    <style name="setting_load_progress_bar_style" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/blue_white_progress_bar</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>


    <!-- full screen  -->
    <style name="FullscreenDialogAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="FullscreenDialog" parent="android:Theme.Dialog">
        <item name="android:colorAccent" tools:ignore="NewApi">@color/app_color</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">@color/app_color</item>
        <item name="android:colorControlNormal" tools:ignore="NewApi">@color/grey_divider</item>
        <item name="android:colorControlActivated" tools:ignore="NewApi">@color/app_color</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@color/app_color</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:colorForeground">@color/md_grey_600</item>
        <item name="android:windowAnimationStyle">@style/FullscreenDialogAnimation</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!--style icon-->
    <style name="NavIconStyle">
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_height">@dimen/nav_bar_height</item>
        <item name="android:layout_width">@dimen/nav_bar_height</item>
        <item name="android:padding">@dimen/nav_bar_icon_padding</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
