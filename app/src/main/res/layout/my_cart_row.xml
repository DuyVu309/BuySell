<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_click_tv_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pading_small">

        <ImageView
            android:id="@+id/img_my_cart"
            android:layout_width="@dimen/width_image_donhang"
            android:layout_height="@dimen/height_image_donhang"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pading_small"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_header_mycart_sanpham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autoLink="phone"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size" />

            <TextView
                android:id="@+id/tv_address_mycart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_small"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/pading_small"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_cart_ten_nguoi_mua"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size" />

                <TextView
                    android:id="@+id/tv_time_mycart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/pading_normal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text_size" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_cart_gia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/transparent"
            android:gravity="center"
            android:textColor="@color/black"
            android:padding="@dimen/pading_small"
            android:singleLine="true"
            android:textSize="@dimen/default_text_size" />

        <TextView
            android:id="@+id/tv_my_cart_so_luong"
            android:layout_width="0dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/transparent"
            android:gravity="center"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="@dimen/default_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/pading_small"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_cart_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pading_normal"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/blue"
            android:textSize="@dimen/default_text_size" />


        <TextView
            android:id="@+id/tv_my_cart_phoone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pading_normal"
            android:autoLink="phone"
            android:background="@drawable/bg_click_tv_white"
            android:drawableLeft="@drawable/ic_phone_black"
            android:drawablePadding="@dimen/pading_small"
            android:inputType="phone"
            android:padding="@dimen/pading_small"
            android:textColor="@color/red"
            android:textColorLink="@color/red"
            android:textSize="@dimen/default_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="......................................................................................................................................................................"
        android:textColor="@color/md_grey_600" />

</LinearLayout>