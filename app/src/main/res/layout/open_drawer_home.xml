<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_open_drawer"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_account"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_account"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/pading_normal"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account" />

        <TextView
            android:id="@+id/tv_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pading_normal"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pading_small">

        <TextView
            android:id="@+id/tv_trang_chu"
            style="@style/normalText"
            android:drawableLeft="@drawable/ic_home"
            android:text="Trang chủ"
            android:textIsSelectable="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pading_small">

        <TextView
            android:id="@+id/tv_thong_bao"
            style="@style/normalText"
            android:drawableLeft="@drawable/ic_notifications"
            android:text="Thông báo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pading_small">

        <TextView
            android:id="@+id/tv_cai_dat"
            style="@style/normalText"
            android:drawableLeft="@drawable/ic_settings"
            android:text="Cài đặt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/pading_small">

        <TextView
            android:id="@+id/tv_my_account"
            style="@style/normalText"
            android:drawableLeft="@drawable/ic_face"
            android:drawableRight="@drawable/ic_expand_more"
            android:text="Tài khoản của tôi" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_dang_xuat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pading_very_large"
        android:padding="@dimen/pading_small"
        android:text="Đăng xuất"
        android:textColor="@color/md_grey_600"
        android:textSize="@dimen/default_text_size"
        android:visibility="gone" />

</LinearLayout>