<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_open_drawer"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_account"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_account"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/pading_normal"
            android:background="@drawable/bg_boder_img"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_product" />

        <TextView
            android:id="@+id/tv_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pading_normal"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_trang_chu"
                style="@style/normalText"
                android:layout_margin="@dimen/pading_small"
                android:drawableLeft="@drawable/ic_home_selector"
                android:text="@string/trang_chu" />

            <TextView
                android:id="@+id/tv_trang_ca_nhan"
                style="@style/normalText"
                android:layout_margin="@dimen/pading_small"
                android:drawableLeft="@drawable/ic_face_selector"
                android:text="@string/trang_ca_nhan" />

            <!--<TextView-->
                <!--android:id="@+id/tv_thong_bao"-->
                <!--style="@style/normalText"-->
                <!--android:layout_margin="@dimen/pading_small"-->
                <!--android:drawableLeft="@drawable/ic_notifications"-->
                <!--android:text="@string/thong_bao" />-->

            <TextView
                android:id="@+id/tv_cai_dat"
                style="@style/normalText"
                android:layout_margin="@dimen/pading_small"
                android:drawableLeft="@drawable/ic_settings_selector"
                android:text="@string/cai_dat" />

            <TextView
                android:id="@+id/tv_tinh_nang_vip"
                style="@style/normalText"
                android:layout_margin="@dimen/pading_small"
                android:drawableLeft="@drawable/ic_vip_selector"
                android:text="@string/tinh_nang_vip" />

            <TextView
                android:id="@+id/tv_feedback"
                style="@style/normalText"
                android:layout_margin="@dimen/pading_small"
                android:drawableLeft="@drawable/ic_feedback_selector"
                android:text="@string/phan_hoi" />

            <TextView
                android:id="@+id/tv_dang_xuat"
                style="@style/normalText"
                android:layout_margin="@dimen/pading_small"
                android:drawableLeft="@drawable/ic_logout_selector"
                android:text="@string/dang_xuat" />

            <TextView
                android:id="@+id/tv_version_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/pading_normal"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>