<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ln_open_drawer"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_account"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_account"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_account"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/pading_normal"
            android:background="@drawable/bg_boder_img"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_product" />

        <TextView
            android:id="@+id/tv_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pading_normal"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/default_text_size" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/pading_small">

                <TextView
                    android:id="@+id/tv_trang_chu"
                    style="@style/normalText"
                    android:drawableLeft="@drawable/ic_home"
                    android:text="@string/trang_chu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/pading_small">

                <TextView
                    android:id="@+id/tv_thong_bao"
                    style="@style/normalText"
                    android:drawableLeft="@drawable/ic_notifications"
                    android:text="@string/thong_bao" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/pading_small">

                <TextView
                    android:id="@+id/tv_cai_dat"
                    style="@style/normalText"
                    android:drawableLeft="@drawable/ic_settings"
                    android:text="@string/cai_dat" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/pading_small">

                <TextView
                    android:id="@+id/tv_my_account"
                    style="@style/normalText"
                    android:drawableLeft="@drawable/ic_face"
                    android:drawableRight="@drawable/ic_expand_more"
                    android:text="@string/tai_khoan_cua_toi" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_my_account"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/pading_very_large"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_trang_ca_nhan"
                    style="@style/normalText"
                    android:background="@drawable/bg_back_activity"
                    android:text="@string/trang_ca_nhan" />

                <TextView
                    android:id="@+id/tv_dang_xuat"
                    style="@style/normalText"
                    android:background="@drawable/bg_back_activity"
                    android:text="@string/dang_xuat" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>