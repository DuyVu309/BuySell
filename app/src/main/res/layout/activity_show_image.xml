<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.example.user.banhangonline.views.PullBackLayout
        android:id="@+id/puller"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.user.banhangonline.views.ZoomPhoto
            android:id="@+id/img_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.example.user.banhangonline.views.PullBackLayout>

    <ProgressBar
        android:id="@+id/pg_loading"
        android:layout_width="@dimen/nav_bar_height_small"
        android:layout_height="@dimen/nav_bar_height_small"
        android:layout_gravity="center"
        android:indeterminateTint="@color/red" />
</FrameLayout>