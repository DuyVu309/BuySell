<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ln_has_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyish_divider"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pading_normal"
            android:gravity="center"
            android:text="@string/message_not_acccount"
            android:textColor="@color/black"
            android:textSize="@dimen/default_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pading_normal"
            android:layout_marginTop="@dimen/pading_normal"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:background="@color/transparent"
                android:layout_height="@dimen/height_btn_small"
                android:layout_marginLeft="@dimen/pading_large"
                android:layout_marginRight="@dimen/pading_normal"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <Button
                    android:id="@+id/btn_dangki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_click_white"
                    android:gravity="center"
                    android:text="@string/dang_ki"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/small_text_size" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:background="@color/transparent"
                android:layout_height="@dimen/height_btn_small"
                android:layout_marginLeft="@dimen/pading_normal"
                android:layout_marginRight="@dimen/pading_large"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <Button
                    android:id="@+id/btn_dangnhap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_click_white"
                    android:gravity="center"
                    android:text="@string/dang_nhap"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/small_text_size" />

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:numColumns="auto_fit"
        android:padding="@dimen/pading_small"
        android:paddingTop="@dimen/pading_normal" />

</LinearLayout>